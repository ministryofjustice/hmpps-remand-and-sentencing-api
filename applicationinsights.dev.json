{
  "role": {
    "name": "hmpps-remand-and-sentencing-api"
  },
  "customDimensions": {
    "service.version": "${BUILD_NUMBER}"
  },
  "instrumentation": {
    "logging": {
      "level": "DEBUG"
    }
  },
  "selfDiagnostics": {
    "destination": "console"
  },
  "sampling": {
    "percentage": 100,
    "overrides": [
      {
        "telemetryType": "request",
        "attributes": [
          {
            "key": "http.url",
            "value": "https?://[^/]+/health.*",
            "matchType": "regexp"
          }
        ],
        "percentage": 100
      },
      {
        "telemetryType": "request",
        "attributes": [
          {
            "key": "http.url",
            "value": "https?://[^/]+/reconciliation.*",
            "matchType": "regexp"
          }
        ],
        "percentage": 1
      },
      {
        "telemetryType": "dependency",
        "attributes": [
          {
            "key": "code.function",
            "value": "getReconciliation",
            "matchType": "strict"
          }
        ],
        "percentage": 1
      }
    ]
  }
}
